<%= form_with model: @log do |f| %>
<%= f.label :current_condition, "How is your skin feeling today?" %><br>
<%= f.select :current_condition, ['Normal', 'Dry', 'Oily', 'Sensitive', 'Breaking Out'], required: true %><br>
<%= f.label :water_level, "How much water did you drink today?" %><br>
<%= f.number_field :water_level, in: 0...128, required: true%>oz<br>
<%= f.label :hours_slept, "How many hours of sleep did you get?" %><br>
<%= f.number_field :hours_slept, in: 0...12, required: true%>hr<br>
<%= f.label :comments, "A space for comments, concerns, observations, or lots of self love."%><br>
<%= f.text_area :comments, required: true %><br>
<%= f.submit "Create Log" %>
<% end %>