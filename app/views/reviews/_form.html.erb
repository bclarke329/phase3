
<%= form_with model: @reviews  do |f| %>
<%= f.label :title, "Review Headline " %><br>
<%= f.text_field :title %><br>
<%= f.label :rating, "How many stars would you give this product? Between 1-5 stars." %><br>
<%= f.number_field :rating, in: 1..5 %> stars!<br>
<%= f.label :review %><br>
<%= f.text_area :review %><br>
<%= f.submit "Add Review" %>
<% end %>
<%# 
## validations needed with this data
title can't be more than 30 characters
rating must be from 0-5
review cant be more than 300. %>